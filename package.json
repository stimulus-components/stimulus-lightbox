    "@hotwired/stimulus": "^3.0.1",
    "np": "^7.6.0",
    "prettier-standard": "16.4.1",
    "typescript": "^4.5.4",
    "vite": "^2.7.7"
  },
  "peerDependencies": {
    "@hotwired/stimulus": "^3.0.1"
